# swapping windows
shift + cmd + alt - h : yabai -m window --swap west
shift + cmd + alt - j : yabai -m window --swap south
shift + cmd + alt - k : yabai -m window --swap north
shift + cmd + alt - l : yabai -m window --swap east

# changing window focus
cmd + alt - h : yabai -m window --focus west
cmd + alt - j : yabai -m window --focus south
cmd + alt - k : yabai -m window --focus north
cmd + alt - l : yabai -m window --focus east

# balance space
hyper - b : yabai -m space --balance

# rotate space
hyper - r : yabai -m space --rotate 90

# fullscreen a window
cmd + alt - f : yabai -m window --toggle zoom-fullscreen

# resizing window
hyper - h : yabai -m window --resize right:-20:0; \
            yabai -m window --resize left:-20:0
hyper - j : yabai -m window --resize bottom:0:-20; \
            yabai -m window --resize up:0:-20
hyper - k : yabai -m window --resize bottom:0:20; \
            yabai -m window --resize up:0:20
hyper - l : yabai -m window --resize right:20:0; \
            yabai -m window --resize left:20:0

# switch spaces
hyper - 1 : yabai -m space --focus 1
hyper - 2 : yabai -m space --focus 2
hyper - 3 : yabai -m space --focus 3
hyper - 4 : yabai -m space --focus 4
hyper - 5 : yabai -m space --focus 5
hyper - 6 : yabai -m space --focus 6

# toggle float
ctrl + alt - f : yabai -m window --toggle float
